.side-bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.header__lists__list--1
        = link_to new_group_path do
          %i= icon('fas', 'edit')
      %li.header__lists__list--2
        = link_to edit_user_path(current_user) do
          %i= icon('fas', 'cogs')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message