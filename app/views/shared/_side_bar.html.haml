.side-bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.header__lists__list--1
        = link_to new_group_path do
          %span.image
            = image_tag src="https://www.iconscreator.com/gd/makefg.php?i=icons/People/User-Group.png&r=255&g=255&b=255", size: "20x20",color: "white"
      %li.header__lists__list--2
        = link_to edit_user_path(current_user) do
          %span.image
            = image_tag src="https://www.iconsdb.com/icons/preview/white/settings-25-xxl.png", size: "20x20",color: "white"
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message